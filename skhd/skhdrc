#
# CONFIGURACION
#

#
# REINICIAR SERVICIOS
#
cmd + lctrl - y : yabai --restart-service
cmd + lctrl - s : skhd --restart-service
cmd + lctrl - b : brew services restart sketchybar
cmd + lctrl + alt - b : sketchybar --update

#
# ESPACIOS
#
lctrl + alt - h : yabai -m space --focus prev
lctrl + alt - l : yabai -m space --focus next 
lctrl + alt - n : yabai -m space --create
lctrl + alt - q : yabai -m space --destroy
#
# MOVER VENTANAS A ESCRITORIOS 
# 
cmd + shift - 1 : yabai -m window --space 1
cmd + shift - 2 : yabai -m window --space 2
cmd + shift - 3 : yabai -m window --space 3
cmd + shift - 4 : yabai -m window --space 4
cmd + shift - 5 : yabai -m window --space 5
cmd + shift - 6 : yabai -m window --space 6
cmd + shift - 7 : yabai -m window --space 7
cmd + shift - 8 : yabai -m window --space 8
cmd + shift - 9 : yabai -m window --space 9
cmd + shift - 0 : yabai -m window --space 10

#
# MOVIMIENTO FOCO CON  VENTANAS
#
lctrl + alt + cmd - h : yabai -m window --focus west
lctrl + alt + cmd - j : yabai -m window --focus south
lctrl + alt + cmd - k : yabai -m window --focus north
lctrl + alt + cmd - l : yabai -m window --focus east
#
# HACER VENTANA FLOTANTE 
#
lctrl + alt + cmd - t : yabai -m window --toggle float;\
           yabai -m window --grid 4:4:1:1:2:2
#
# MOVIMIENTO DE MONITORES 
#
lctrl + alt + shift + cmd - h : yabai -m display --focus next
lctrl + alt + shift + cmd - l : yabai -m display --focus prev
#
# APPLICACIONES
#
alt + shift - k : open -a 'kitty'
alt + shift - t : open -a 'alacritty'
alt + shift - o : open -a 'Obsidian' 
alt + shift - f : open -a 'Firefox'
alt + shift - a : open -a 'System Settings'

